<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Main content container with weight to push nav bar to bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Search Bar -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_hint"
            android:padding="12dp"
            android:background="@color/white"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:layout_marginBottom="24dp"/>

        <!-- Category Section Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/categories"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <!-- Category Buttons (Horizontal) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/breakfastButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/breakfast"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="8dp"/>
<!--            android:textSize="12sp"-->
<!--            android:singleLine="true"-->

            <Button
                android:id="@+id/lunchButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lunch"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/dinnerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dinner"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/text_primary"/>
        </LinearLayout>

        <!-- Featured Recipe Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/featured_recipe"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <!-- Featured Recipe Card -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/featured_recipe"
                android:scaleType="centerCrop"
                android:contentDescription="@string/featured_image_desc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/featured_title"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="16dp"
                android:background="#80000000"
                android:layout_gravity="bottom"/>

        </FrameLayout>

        <Button
            android:id="@+id/viewFavoritesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accent"
            android:text="@string/view_favorites"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Navigation Buttons - Now at bottom of screen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/title_home"
            android:padding="12dp"
            android:src="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/title_profile"
            android:padding="12dp"
            android:src="@drawable/ic_profile" />

        <ImageButton
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/title_add_recipe"
            android:padding="12dp"
            android:src="@drawable/ic_add" />

        <ImageButton
            android:id="@+id/btn_notifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/title_notifications"
            android:padding="12dp"
            android:src="@drawable/ic_notifications" />

        <ImageButton
             android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/title_settings"
            android:padding="12dp"
            android:src="@drawable/ic_settings" />
    </LinearLayout>

</LinearLayout>