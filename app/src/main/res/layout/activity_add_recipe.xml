<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Header with back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_previous"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_button_desc"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new_recipe"
            android:textSize="24sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Recipe Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_title"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/editRecipeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/recipe_title_hint"
                android:inputType="text"
                android:layout_marginBottom="16dp"/>

            <!-- Recipe Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_category"
                android:textSize="16sp"
                android:textColor="@color/text_primary"/>

            <RadioGroup
                android:id="@+id/categoryRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radioBreakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/breakfast"
                    android:layout_marginEnd="8dp"/>

                <RadioButton
                    android:id="@+id/radioLunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lunch"
                    android:layout_marginEnd="8dp"/>

                <RadioButton
                    android:id="@+id/radioDinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dinner"/>
            </RadioGroup>

            <!-- Recipe Ingredients -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_ingredients"
                android:textSize="16sp"
                android:textColor="@color/text_primary"/>

            <EditText
                android:id="@+id/editIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/recipe_ingredients_hint"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top"
                android:layout_marginBottom="16dp"/>

            <!-- Recipe Instructions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_instructions"
                android:textSize="16sp"
                android:textColor="@color/text_primary"/>

            <EditText
                android:id="@+id/editInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/recipe_instructions_hint"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:gravity="top"
                android:layout_marginBottom="16dp"/>

            <!-- Add Photo Button -->
            <Button
                android:id="@+id/btnAddPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_photo"
                android:backgroundTint="@color/secondary"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp"/>

            <!-- Save Recipe Button -->
            <Button
                android:id="@+id/btnSaveRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_recipe"
                android:backgroundTint="@color/accent"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>