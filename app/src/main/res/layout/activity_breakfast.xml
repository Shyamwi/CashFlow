<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Header with back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_previous"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_button_desc"
            android:padding="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/breakfast_recipes"
            android:textSize="24sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Breakfast recipes will be shown in a ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Recipe Item 1 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/breakfast_1"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/breakfast_1_desc"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/breakfast_1_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:background="#80000000"
                    android:layout_gravity="bottom"/>
            </FrameLayout>

            <!-- Recipe Item 2 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/breakfast_2"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/breakfast_2_desc"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/breakfast_2_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:background="#80000000"
                    android:layout_gravity="bottom"/>
            </FrameLayout>

            <!-- Recipe Item 3 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/breakfast_3"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/breakfast_3_desc"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/breakfast_3_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:background="#80000000"
                    android:layout_gravity="bottom"/>
            </FrameLayout>

            <!-- Recipe Item 4 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/breakfast_4"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/breakfast_4_desc"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/breakfast_4_title"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:background="#80000000"
                    android:layout_gravity="bottom"/>
            </FrameLayout>

                <!-- Recipe Item 5 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/breakfast_5"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/breakfast_4_desc"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/breakfast_5_title"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:padding="12dp"
                        android:background="#80000000"
                        android:layout_gravity="bottom"/>
                </FrameLayout>

                <!-- Recipe Item 6 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/breakfast_6"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/breakfast_6_desc"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/breakfast_6_title"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:padding="12dp"
                        android:background="#80000000"
                        android:layout_gravity="bottom"/>
                </FrameLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>